{
  "extends": ["tslint:recommended", "codelyzer"],
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    "max-line-length": {
      "options": [150]
    },
    "indent": [true, "spaces", 4],
    "semicolon": [true, "never"],
    "quotemark": [true, "single"],
    "only-arrow-functions": false,
    "ordered-imports": false,
    "trailing-comma": [true,
      {"multiline": "always", "singleline": "never"}
    ],
    "prefer-const": true,
    "object-literal-shorthand": false,
    "object-literal-sort-keys": false,
    "one-variable-per-declaration": true,
    "variable-name": [true, "ban-keywords", "check-format", "allow-snake-case"],
    "prefer-for-of": true,
    "object-literal-key-quotes": false,
    "no-string-literal": false,
    "triple-equals": false,
    "space-before-function-paren": [true, "always"],
    "whitespace": true,
    "no-empty": false,
    "no-shadowed-variable": false,
    "member-access": false,

    "angular-whitespace": [true, "check-interpolation", "check-pipe", "check-semicolon"],
    "banana-in-box": true,
    "templates-no-negated-async": true,
    "directive-selector": [
      true, "attribute", ["ts"], "camelCase"
    ],
    "component-selector": [
      "element", [
        "ts-core", "ts-explore", "ts-sketch", "ts-story"
      ], "kebab-case"
    ],
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "use-view-encapsulation": true,
    "no-attribute-parameter-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-forward-ref": true,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "pipe-naming": [true, "camelCase", "ts"],
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "templates-use-public": true,
    "no-access-missing-member": true,
    "invoke-injectable": true,
    "template-to-ng-template": true
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
